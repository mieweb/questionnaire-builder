{
  "name": "questionnaire-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "vite --config apps/web-editor/vite.config.ts",
    "preview": "vite preview --config apps/web-editor/vite.config.ts",
    "build": "npm run build:packages && vite build --config apps/web-editor/vite.config.ts",
    "build:packages": "npm run build:forms-engine && npm run build:forms-editor",
    "build:forms-engine": "echo build forms-engine (add bundler later)",
    "build:forms-editor": "echo build forms-editor (add bundler later)",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@tailwindcss/vite": "^4.0.6",
    "@vitejs/plugin-react": "^4.3.3",
    "vite": "^6.3.6",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0"
  }
}