{
  "name": "questionnaire-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run build:watch --workspace=packages/forms-engine --workspace=packages/forms-editor --workspace=packages/forms-renderer\" \"npm run start --workspace=apps/mieweb-forms-docs\"",
    "dev:demo": "concurrently \"npm run build:watch --workspace=packages/forms-engine --workspace=packages/forms-editor --workspace=packages/forms-renderer\" \"npm run dev --workspace=apps/web-demo-packages\"",
    "prod": "npm run prod --workspace=apps/mieweb-forms-docs",
    "build": "npm run build:packages && npm run build:docs",
    "build:packages": "npm run build --workspace=packages/forms-engine --workspace=packages/forms-editor --workspace=packages/forms-renderer",
    "build:docs": "npm run build --workspace=apps/mieweb-forms-docs",
    "lint": "eslint .",
    "publish": "node scripts/publish.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@tailwindcss/vite": "^4.0.6",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "vite": "^6.3.6"
  }
}
