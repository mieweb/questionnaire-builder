{
  "name": "mieweb-forms-docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "concurrently \"npm run tailwind:dev\" \"docusaurus start --host 0.0.0.0 --port 3000 --no-open\"",
    "build": "npm run tailwind:build && docusaurus build",
    "prod": "npm run build && docusaurus serve --host 0.0.0.0 --port 3000",
    "tailwind:dev": "tailwindcss -i ./src/css/tailwind.input.css -o ./src/css/tailwind.output.css --watch",
    "tailwind:build": "tailwindcss -i ./src/css/tailwind.input.css -o ./src/css/tailwind.output.css --minify",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/legacy-modes": "^6.5.2",
    "@docusaurus/core": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@mdx-js/react": "^3.0.0",
    "@mieweb/forms-editor": "*",
    "@mieweb/forms-engine": "*",
    "@mieweb/forms-renderer": "*",
    "@uiw/react-codemirror": "^4.25.4",
    "clsx": "^2.0.0",
    "js-yaml": "^4.1.1",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "concurrently": "^9.2.1"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  }
}
