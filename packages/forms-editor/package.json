{
	"name": "@mieweb/forms-editor",
	"version": "1.0.2",
	"description": "Embeddable questionnaire form editor component",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build:css": "cd ../.. && npx @tailwindcss/cli -i packages/forms-editor/src/index.css -o packages/forms-editor/src/index.output.css",
		"build": "npm run build:css && vite build",
		"build:watch": "npm run build:css && vite build --watch"
	},
	"sideEffects": [
		"**/*.css"
	],
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	},
	"dependencies": {
		"@mieweb/forms-engine": "^1.1.1",
		"@monaco-editor/react": "^4.6.0",
		"js-yaml": "^4.1.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
