{
  "name": "@questionnaire-builder/editor",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Complete form editor application with state management and UI",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./components/*": "./src/components/*",
    "./state/*": "./src/state/*",
    "./utils/*": "./src/utils/*"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "framer-motion": "^12.4.2",
    "zustand": "^5.0.8",
    "uuid": "^11.0.4",
    "js-yaml": "^4.1.0",
    "@questionnaire-builder/fields": "*",
    "@questionnaire-builder/forms": "*",
    "@questionnaire-builder/icons": "*"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "nx": {
    "projectType": "library",
    "sourceRoot": "packages/editor/src",
    "targets": {
      "build": {
        "dependsOn": [
          "@questionnaire-builder/fields:build", 
          "@questionnaire-builder/forms:build",
          "@questionnaire-builder/icons:build"
        ]
      }
    }
  }
}