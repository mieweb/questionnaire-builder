{
  "name": "@mieweb/forms-renderer",
  "version": "1.3.0",
  "description": "Read-only questionnaire form renderer as Web Component producing FHIR QuestionnaireResponse",
  "type": "module",
  "main": "./dist/react.js",
  "module": "./dist/react.js",
  "exports": {
    ".": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./standalone": {
      "import": "./dist/standalone.js",
      "require": "./dist/standalone.umd.cjs"
    },
    "./blaze": {
      "import": "./dist/blaze.js",
      "require": "./dist/blaze.umd.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build:css": "cd ../.. && npx @tailwindcss/cli -i packages/forms-renderer/src/index.css -o packages/forms-renderer/src/index.output.css",
    "build": "npm run build:css && vite build && vite build --config vite.config.standalone.js && vite build --config vite.config.blaze.js",
    "build:watch": "npm run build:css && vite build --watch"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@mieweb/forms-engine": "^1.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
