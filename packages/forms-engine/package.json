{
  "name": "@mieweb/forms-engine",
  "version": "1.1.1",
  "description": "Field components and utilities for questionnaire builder",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build:css": "cd ../.. && npx @tailwindcss/cli -i packages/forms-engine/src/styles.css -o packages/forms-engine/src/styles.output.css",
    "build:css:watch": "cd ../.. && npx @tailwindcss/cli -i packages/forms-engine/src/styles.css -o packages/forms-engine/src/styles.output.css --watch",
    "build": "npm run build:css && vite build",
    "build:watch": "concurrently \"npm run build:css:watch\" \"vite build --watch\""
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "vite": "^7.3.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
