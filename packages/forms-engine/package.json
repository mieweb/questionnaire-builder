{
  "name": "@mieweb/forms-engine",
  "version": "0.1.11",
  "description": "Field components and utilities for questionnaire builder",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build:css": "cd ../.. && npx @tailwindcss/cli -i packages/forms-engine/src/styles.css -o packages/forms-engine/src/styles.output.css",
    "build": "npm run build:css && vite build",
    "build:watch": "npm run build:css && vite build --watch"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5.9.2",
    "vite": "^6.3.6"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
